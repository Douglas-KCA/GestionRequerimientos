@model PERSONA
@{
    ViewBag.Title = "Nuevo";
}

<h2>
    <a style="float:right; color:deepskyblue" href="@Url.Action("Index", "Personas")"><i class="fas fa-arrow-alt-circle-left"></i></a>
    Registras Persona
</h2>
<hr />

@using (Html.BeginForm("Nuevo", "Personas", FormMethod.Post))
{
    <div class="form-group">
        <label>DPI</label>
        @Html.TextBoxFor(m => m.dpi, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        <label>Nombre</label>
        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        <label>Apellido</label>
        @Html.TextBoxFor(m => m.apellido, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn-success" />
    </div>
}