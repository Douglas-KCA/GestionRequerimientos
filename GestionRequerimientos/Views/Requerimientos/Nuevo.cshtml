@model RequerimientoViewModel
@{
    ViewBag.Title = "Nuevo";
}

<h2>
    <a style="float:right; color:deepskyblue" href="@Url.Action("Index", "Requerimientos")"><i class="fas fa-arrow-alt-circle-left"></i></a>
    Nuevo Usuario
</h2>
<hr />

@using (Html.BeginForm("Nuevo", "Requerimientos", FormMethod.Post))
{

    <div class="form-group">
        <label>Id Proyecto</label>
        <select name="Requerimiento.id_proyecto" class="form-control" required>
            <option>Seleccione...</option>
            @foreach (var proyecto in Model.Proyectos)
            {
                <option value="@proyecto.id_proyecto" )>@proyecto.descripcion</option>
            }
        </select>
        @*@Html.TextBoxFor(m => m.proyecto.nom_estado, new { @class = "form-control", @Value ="ING", @ReadOnly = "ReadOnly", @type = "hidden"})*@
    </div>

    @*<div class="form-group">
            <label>id req</label>
            @Html.TextBoxFor(m => m.Requerimiento.id_proyecto, new { @class = "form-control", @required = "required" })
        </div>*@

    <div class="form-group">
        <label>nombre</label>
        @Html.TextBoxFor(m => m.Requerimiento.nombre, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        <label>descripcion</label>
        @Html.TextBoxFor(m => m.Requerimiento.descripcion, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        <label>tiempo</label>
        @Html.TextBoxFor(m => m.Requerimiento.tiempo, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        <label>porcentaje</label>
        @Html.TextBoxFor(m => m.Requerimiento.porcentaje, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        <label>costo</label>
        @Html.TextBoxFor(m => m.Requerimiento.costo, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(m => m.Requerimiento.fecha_registro, new { @class = "form-control", @required = "required", @ReadOnly = "ReadOnly", @Value = @DateTime.Now.ToShortDateString(), @type = "hidden" })
    </div>

    <div class="form-group">
        <label>Estado</label>
        <select name="Requerimiento.nom_estado" class="form-control" required>
            <option>Seleccione...</option>
            @foreach (var estado in Model.Estados)
            {
                <option value="@estado.nom_estado" )>@estado.descripcion</option>
            }
        </select>
        @*@Html.TextBoxFor(m => m.proyecto.nom_estado, new { @class = "form-control", @Value ="ING", @ReadOnly = "ReadOnly", @type = "hidden"})*@
    </div>

    <div class="form-group">
        <label>Estado</label>
        <select name="Requerimiento.nom_req" class="form-control" required>
            <option>Seleccione...</option>
            @foreach (var tip_req in Model.Tipo_Requerimiento)
            {
                <option value="@tip_req.nom_req" )>@tip_req.descripcion</option>
            }
        </select>
        @*@Html.TextBoxFor(m => m.proyecto.nom_estado, new { @class = "form-control", @Value ="ING", @ReadOnly = "ReadOnly", @type = "hidden"})*@
    </div>



    <div class="form-group">
        <input type="submit" value="Guardar" class="btn-success" />
    </div>
}
